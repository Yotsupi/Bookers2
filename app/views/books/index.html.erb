<p></p>
<div class="container">
  <div class="row">
  <%= render '/list' %>
    <div class="col-lg-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td style="width:10%">
              <%= attachment_image_tag @user, :profile_image, size:"40x40", format:'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td style="width:35%"><%= link_to "#{book.title}", book_path(book.id)  %></td>
            <td style="width:55%"><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>