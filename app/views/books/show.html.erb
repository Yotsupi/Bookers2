<% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
<% end %>
<div class="container">
  <div class="row">
    <%= render '/list' %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book_1.user.id) do %>
            <%= attachment_image_tag @book_1.user, :profile_image, size:"40x40", format:'jpeg', fallback: "no_image.jpg" %>
            <br>
            <%= @book_1.user.name %>
            <% end %>
          </td>
          <td><%= link_to "#{@book_1.title}", book_path(@book_1.id) %></td>
          <td><%= @book_1.body %></td>
              <% if @user == current_user %>
                <td>
                <%= link_to edit_book_path do %>
                  <button type="button" class="btn btn-success">Edit</button>
                <% end %>
                </td>
                <td>
                <%= link_to book_path(@book_1.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
                  <button type="button" class="btn btn-danger">Destroy</button>
                <% end %>
                </td>
              <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>