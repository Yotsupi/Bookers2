<p></p>
<div class="container">
  <div class="row">
    <%= render '/list' %>
    <div class="col-lg-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td style="width:10%">
            <%= attachment_image_tag @book.user, :profile_image, size:"40x40", format:'jpeg', fallback: "no_image.jpg" %>
            <br>
            <%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
          </td>
          <td style="width:20%"><%= link_to "#{@book.title}", book_path(@book.id) %></td>
          <td style="width:70%"><%= @book.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>