<p></p>
<div class="container">
  <div class="row">
  <%= render '/list' %>
    <div class="col-lg-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td style="width:30%">
              <%= attachment_image_tag @user, :profile_image, size:"40x40", format:'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td style="width:50%"><%= user.name %></td>
            <td style="width:20%"><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>