<div class="container">
  <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
    <label class="row mx-auto" for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    <label class="row mx-auto" for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder:"プロフィール画像" %>
    <label class="row mx-auto" for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
    <div class="row mx-auto">
      <%= f.submit "Update User" %>
    </div>
</div>
<% end %>